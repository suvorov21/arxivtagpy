{% extends "layout.jinja2" %}

{% block head_scripts %}
  <title>arXiv tag. Sign up</title>

  <script type="text/javascript" src="{{ url_for('main_bp.static', filename='dist/js/papers_style.bundle.js') }}?{{ data['version'] }}"></script>
{% endblock %}

{% block content %}
  <div class="container mt-4">
    <div class="row justify-content-center">
      <form class="col-sm-8" action="/new_user" method="POST">
        <div class="form-group row mt-2">
          <label for="email" class="col-sm-4 col-form-label">Email</label>
          <div class="col-sm-8">
            <input type="email" class="form-control" id="email" name="email" placeholder="Email" autocomplete="username">
          </div>
        </div>
        <div class="form-group row mt-2">
          <label for="pasw" class="col-sm-4 col-form-label">Password</label>
          <div class="col-sm-8">
            <input type="password" class="form-control" id="pasw" name="pasw" placeholder="Password" autocomplete="new-password">
          </div>
        </div>
        <div class="form-group row mt-2">
          <label for="pasw2" class="col-sm-4 col-form-label">Repeat password</label>
          <div class="col-sm-8">
            <input type="password" class="form-control" id="pasw2" name="pasw2" placeholder="Password" autocomplete="new-password">
          </div>
        </div>
        <button class="btn btn-primary float-right mt-4" type="submit">Sigh up!</button>
      </form>
    </div>
  </div>
{% endblock %}